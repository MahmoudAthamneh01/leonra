# نسخة المثال من متغيرات البيئة
# انسخ هذا الملف إلى .env.local وقم بتعديل القيم

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/linora_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@linora.sa"

# Payment Configuration
MADA_MERCHANT_ID="your-mada-merchant-id"
MADA_SECRET_KEY="your-mada-secret-key"
APPLE_PAY_MERCHANT_ID="merchant.sa.linora"
VISA_API_KEY="your-visa-api-key"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="me-south-1"
AWS_S3_BUCKET="linora-uploads"
